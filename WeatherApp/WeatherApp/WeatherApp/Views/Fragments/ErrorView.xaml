<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="WeatherApp.Views.Fragments.ErrorView"
    RowDefinitions=".25*, *, .25*, Auto"
    RowSpacing="0"
    Margin="16, 0, 16, 0">
    <StackLayout
        Grid.Row="1"
        Spacing="0"
        VerticalOptions="End">
        <Label
            Text="Error"
            HorizontalOptions="Start"
            FontFamily="FrankRuhle_Medium"
            FontSize="{StaticResource Headline2FontSize}"
            TextColor="{StaticResource LightPrimaryTextColor}"/>
        <Label
            Text="Oops, something went wrong! Please wait few moments and try again."
            FontSize="{StaticResource Body1FontSize}"
            FontFamily="Barlow_Light"
            TextColor="{StaticResource LightPrimaryTextColor}"
            Margin="0, 4, 0, 0"></Label>
    </StackLayout>
    <Button
        Grid.Row="3"
        Text="TRY AGAIN"
        FontFamily="Barlow_Medium"
        FontSize="{StaticResource ButtonFontSize}"
        BackgroundColor="{StaticResource AccentColor}"
        TextColor="{StaticResource LightPrimaryTextColor}"
        Padding="16, 22, 16, 22"
        Margin="16, 8, 16, 24"
        Command="{Binding TryAgainCommand}"
        CornerRadius="36"></Button>
</Grid>
