<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             x:Class="WeatherApp.Views.WeatherPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <RefreshView
            IsRefreshing="{Binding IsRefreshing}"
            RefreshColor="{StaticResource PrimaryColor}"
            Command="{Binding RefreshCommand}">
            <ScrollView>
                <Grid
                    BackgroundColor="{StaticResource BackgroundColor}"
                    xct:StateLayout.CurrentState="{Binding MainState}" 
                    xct:StateLayout.AnimateStateChanges="True"
                    RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto"
                    RowSpacing="0">
                    <xct:StateLayout.StateViews>
                        <xct:StateView
                            StateKey="Loading"
                            VerticalOptions="FillAndExpand">
                            <ActivityIndicator
                                Color="{StaticResource PrimaryColor}"
                                IsRunning="True"
                                WidthRequest="48"
                                HeightRequest="48"
                                HorizontalOptions="CenterAndExpand"
                                VerticalOptions="CenterAndExpand"></ActivityIndicator>
                        </xct:StateView>
                        <xct:StateView
                            StateKey="Error"
                            VerticalOptions="FillAndExpand">
                            <xct:StateView.Background>
                                <LinearGradientBrush 
                                StartPoint="0, 0" 
                                EndPoint="0, 1">
                                    <GradientStop Color="{StaticResource PrimaryColor}" Offset="0.1"></GradientStop>
                                    <GradientStop Color="{StaticResource PrimaryDarkColor}" Offset="1.0"></GradientStop>
                                </LinearGradientBrush>
                            </xct:StateView.Background>
                            <Grid 
                                RowDefinitions=".25*, *, .25*, Auto"
                                RowSpacing="0"
                                Margin="16, 0, 16, 0">
                                <StackLayout
                                    Grid.Row="1"
                                    Spacing="0"
                                    VerticalOptions="End">
                                    <Label
                                        Text="Error"
                                        HorizontalOptions="Start"
                                        FontFamily="FrankRuhle_Medium"
                                        FontSize="{StaticResource Headline2FontSize}"
                                        TextColor="{StaticResource WhiteColor}"/>
                                    <Label
                                        Text="Oops, something went wrong! Please wait few moments and try again."
                                        FontSize="{StaticResource Body1FontSize}"
                                        FontFamily="Rubik_Light"
                                        TextColor="{StaticResource WhiteColor}"
                                        Margin="0, 4, 0, 0"></Label>
                                </StackLayout>
                                <Button
                                    Grid.Row="3"
                                    Text="TRY AGAIN"
                                    FontFamily="Rubik_Medium"
                                    FontSize="{StaticResource ButtonFontSize}"
                                    BackgroundColor="{StaticResource AccentColor}"
                                    TextColor="{StaticResource TextColor}"
                                    Padding="16, 22, 16, 22"
                                    Margin="16, 8, 16, 24"
                                    Command="{Binding UseCurrentLocationCommand}"
                                    CornerRadius="36"></Button>
                            </Grid>
                        </xct:StateView>
                    </xct:StateLayout.StateViews>
                    <Label
                        Grid.Row="0"
                        Text="{Binding CurrentCity}"
                        FontSize="{StaticResource Headline2FontSize}"
                        FontFamily="FrankRuhle_Medium"
                        TextColor="{StaticResource TextColor}"
                        HorizontalOptions="Start"
                        Margin="16, 0, 0, 0"></Label>
                    <Label
                        Grid.Row="1"
                        Text="{Binding CurrentCountry}"
                        FontSize="{StaticResource Headline4FontSize}"
                        FontFamily="Rubik_Light"
                        TextColor="{StaticResource TextColor}"
                        HorizontalOptions="Start"
                        Margin="16, 0, 0, 0"></Label>
                    <Label
                        Grid.Row="2"
                        Text="{Binding CurrentWeather.dt, StringFormat='{0:dddd, d MMMM yyyy hh:mm tt}'}"
                        FontSize="{StaticResource Body1FontSize}"
                        FontFamily="Rubik_Light"
                        TextColor="{StaticResource GrayColor}"
                        HorizontalOptions="Start"
                        Margin="16, 4, 0, 0"></Label>
                    <StackLayout
                        Grid.Row="3"
                        VerticalOptions="CenterAndExpand"
                        Margin="0, 32, 0, 16">
                        <Image 
                            Source="{Binding CurrentWeather.weather.icon, StringFormat='icon_{0}.png'}"
                            WidthRequest="120"
                            HeightRequest="120"></Image>
                        <Label
                            Text="{Binding CurrentWeather.weather.description}"
                            FontSize="{StaticResource Body2FontSize}"
                            FontFamily="Rubik_Regular"
                            TextColor="{StaticResource TextColor}"
                            HorizontalOptions="Center"
                            Margin="0, 8, 0, 0"></Label>
                    </StackLayout>
                    <StackLayout
                        Grid.Row="4"
                        Orientation="Horizontal"
                        HorizontalOptions="FillAndExpand"
                        Margin="16, 0, 16, 0">
                        <StackLayout
                            VerticalOptions="End">
                            <Label
                                HorizontalOptions="Start">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span
                                            Text="Wind speed: "
                                            FontFamily="Rubik_Light"
                                            FontSize="{StaticResource Body2FontSize}"
                                            TextColor="{StaticResource GrayColor}"></Span>
                                        <Span
                                            Text="{Binding CurrentWeather.wind_speed, StringFormat='{0:N1} m/s'}"
                                            FontFamily="Rubik_Regular"
                                            FontSize="{StaticResource Body2FontSize}"
                                            TextColor="{StaticResource TextColor}"></Span>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label
                                HorizontalOptions="Start">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span
                                            Text="Humidity: "
                                            FontFamily="Rubik_Light"
                                            FontSize="{StaticResource Body2FontSize}"
                                            TextColor="{StaticResource GrayColor}"></Span>
                                        <Span
                                            Text="{Binding CurrentWeather.humidity, StringFormat='{0}%'}"
                                            FontFamily="Rubik_Regular"
                                            FontSize="{StaticResource Body2FontSize}"
                                            TextColor="{StaticResource TextColor}"></Span>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label
                                HorizontalOptions="Start">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span
                                            Text="Precipitation volume: "
                                            FontFamily="Rubik_Light"
                                            FontSize="{StaticResource Body2FontSize}"
                                            TextColor="{StaticResource GrayColor}"></Span>
                                        <Span
                                            Text="{Binding CurrentWeather.rain, StringFormat='{0} mm'}"
                                            FontFamily="Rubik_Regular"
                                            FontSize="{StaticResource Body2FontSize}"
                                            TextColor="{StaticResource TextColor}"></Span>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </StackLayout>
                        <StackLayout
                            Spacing="0"
                            HorizontalOptions="EndAndExpand"
                            VerticalOptions="EndAndExpand">
                            <Label
                                HorizontalOptions="End">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span
                                            Text="{Binding CurrentWeather.temp, StringFormat='{0:N0}°'}"
                                            FontFamily="Rubik_Light"
                                            FontSize="{StaticResource Headline0FontSize}"
                                            TextColor="{StaticResource TextColor}"></Span>
                                        <Span
                                            Text="C"
                                            FontFamily="Rubik_Regular"
                                            FontSize="{StaticResource Subtitle1FontSize}"
                                            TextColor="{StaticResource TextColor}"></Span>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label
                                HorizontalOptions="End">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span
                                            Text="Feels like "
                                            FontFamily="Rubik_Light"
                                            FontSize="{StaticResource Body2FontSize}"
                                            TextColor="{StaticResource TextColor}"></Span>
                                        <Span
                                            Text="{Binding CurrentWeather.feels_like, StringFormat='{0:N0}°C'}"
                                            FontFamily="Rubik_Regular"
                                            FontSize="{StaticResource Body2FontSize}"
                                            TextColor="{StaticResource TextColor}"></Span>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </StackLayout>
                    </StackLayout>
                    <StackLayout
                        Grid.Row="5"
                        Margin="16, 0, 16, 0"
                        Padding="0, 0, 0, 2">
                        <Label
                            Text="24 hours forecast"
                            FontSize="{StaticResource Headline4FontSize}"
                            FontFamily="FrankRuhle_Medium"
                            TextColor="{StaticResource TextColor}"
                            HorizontalOptions="Start"
                            Margin="0, 12, 0, 0"></Label>
                        <CollectionView
                            x:Name="hourlyForecast"
                            ItemsSource="{Binding CurrentWeather.hourlyWeatherForecast}"
                            HeightRequest="90"
                            SelectionMode="None">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout Orientation="Horizontal" ItemSpacing="8" SnapPointsType="Mandatory" SnapPointsAlignment="Start"/>
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout
                                        Margin="0"
                                        Spacing="0"
                                        Padding="0">
                                        <Frame
                                            Padding="16, 6, 16, 6"
                                            CornerRadius="24">
                                            <Frame.GestureRecognizers>
                                                <TapGestureRecognizer
                                                    Command="{Binding Path=BindingContext.HourlySelectionChangedCommand, Source={x:Reference hourlyForecast}}"
                                                    CommandParameter="{Binding .}"
                                                    NumberOfTapsRequired="1" />
                                            </Frame.GestureRecognizers>
                                            <Frame.Triggers>
                                                <MultiTrigger TargetType="Frame">
                                                    <MultiTrigger.Conditions>
                                                        <BindingCondition Binding="{Binding isActive, Mode=TwoWay}" Value="True"/>
                                                    </MultiTrigger.Conditions>
                                                    <Setter Property="BackgroundColor" Value="{StaticResource WhiteColor}"/>
                                                </MultiTrigger>
                                                <MultiTrigger TargetType="Frame">
                                                    <MultiTrigger.Conditions>
                                                        <BindingCondition Binding="{Binding isActive, Mode=TwoWay}" Value="False"/>
                                                    </MultiTrigger.Conditions>
                                                    <Setter Property="BackgroundColor" Value="{StaticResource LightGrayColor}"/>
                                                    <Setter Property="HasShadow" Value="False"/>
                                                </MultiTrigger>
                                            </Frame.Triggers>
                                            <Grid
                                                RowDefinitions="Auto, *, Auto">
                                                <Label
                                                    Grid.Row="0"
                                                    Text="{Binding dt, StringFormat='{0:HH:mm}'}"
                                                    HorizontalOptions="Center"
                                                    FontSize="{StaticResource Body2FontSize}">
                                                    <Label.Triggers>
                                                        <MultiTrigger TargetType="Label">
                                                            <MultiTrigger.Conditions>
                                                                <BindingCondition Binding="{Binding isActive}" Value="True"/>
                                                            </MultiTrigger.Conditions>
                                                            <Setter Property="FontFamily" Value="Rubik_Regular"/>
                                                            <Setter Property="TextColor" Value="{StaticResource TextColor}"/>
                                                        </MultiTrigger>
                                                        <MultiTrigger TargetType="Label">
                                                            <MultiTrigger.Conditions>
                                                                <BindingCondition Binding="{Binding isActive}" Value="False"/>
                                                            </MultiTrigger.Conditions>
                                                            <Setter Property="FontFamily" Value="Rubik_Light"/>
                                                            <Setter Property="TextColor" Value="{StaticResource GrayColor}"/>
                                                        </MultiTrigger>
                                                    </Label.Triggers>
                                                </Label>
                                                <Image 
                                                    Grid.Row="1"
                                                    Source="{Binding weather.icon, StringFormat='icon_{0}.png'}"
                                                    HeightRequest="30"
                                                    VerticalOptions="Center">
                                                </Image>
                                                <Label
                                                    Grid.Row="2"
                                                    Text="{Binding temp, StringFormat='{0:N0}°C'}"
                                                    HorizontalOptions="Center"
                                                    FontSize="{StaticResource Body2FontSize}">
                                                    <Label.Triggers>
                                                        <MultiTrigger TargetType="Label">
                                                            <MultiTrigger.Conditions>
                                                                <BindingCondition Binding="{Binding isActive}" Value="True"/>
                                                            </MultiTrigger.Conditions>
                                                            <Setter Property="FontFamily" Value="Rubik_Regular"/>
                                                            <Setter Property="TextColor" Value="{StaticResource TextColor}"/>
                                                        </MultiTrigger>
                                                        <MultiTrigger TargetType="Label">
                                                            <MultiTrigger.Conditions>
                                                                <BindingCondition Binding="{Binding isActive}" Value="False"/>
                                                            </MultiTrigger.Conditions>
                                                            <Setter Property="FontFamily" Value="Rubik_Light"/>
                                                            <Setter Property="TextColor" Value="{StaticResource GrayColor}"/>
                                                        </MultiTrigger>
                                                    </Label.Triggers>
                                                </Label>
                                            </Grid>
                                        </Frame>
                                    </StackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                    <StackLayout
                        Grid.Row="6"
                        Margin="16, 0, 16, 8">
                        <Label
                            Text="7 days forecast"
                            FontSize="{StaticResource Headline4FontSize}"
                            FontFamily="FrankRuhle_Medium"
                            TextColor="{StaticResource TextColor}"
                            HorizontalOptions="Start"
                            Margin="0, 12, 0, 0"></Label>
                        <StackLayout
                            BindableLayout.ItemsSource="{Binding CurrentWeather.hourlyWeatherForecast}">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout
                                        Margin="0"
                                        Spacing="0"
                                        Padding="0">
                                        <Frame
                                            Padding="16, 8, 16, 8"
                                            CornerRadius="24"
                                            HasShadow="False"
                                            BackgroundColor="{StaticResource LightGrayColor}">
                                            <Grid 
                                                ColumnDefinitions="Auto, *, Auto">
                                                <Image 
                                                    Grid.Column="0"
                                                    Source="{Binding weather.icon, StringFormat='icon_{0}.png'}"
                                                    WidthRequest="30"
                                                    VerticalOptions="Center"></Image>
                                                <Label
                                                    Grid.Column="1"
                                                    Margin="8, 0, 0, 0"
                                                    Text="{Binding dt, StringFormat='{0:t}'}"
                                                    HorizontalOptions="Start"
                                                    VerticalOptions="Center"
                                                    FontSize="{StaticResource Body2FontSize}">
                                                    <Label.Triggers>
                                                        <MultiTrigger TargetType="Label">
                                                            <MultiTrigger.Conditions>
                                                                <BindingCondition Binding="{Binding isActive}" Value="True"/>
                                                            </MultiTrigger.Conditions>
                                                            <Setter Property="FontFamily" Value="Rubik_Regular"/>
                                                            <Setter Property="TextColor" Value="{StaticResource TextColor}"/>
                                                        </MultiTrigger>
                                                        <MultiTrigger TargetType="Label">
                                                            <MultiTrigger.Conditions>
                                                                <BindingCondition Binding="{Binding isActive}" Value="False"/>
                                                            </MultiTrigger.Conditions>
                                                            <Setter Property="FontFamily" Value="Rubik_Light"/>
                                                            <Setter Property="TextColor" Value="{StaticResource GrayColor}"/>
                                                        </MultiTrigger>
                                                    </Label.Triggers>
                                                </Label>
                                                <Label
                                                    Grid.Column="2"
                                                    Margin="0, 0, 8, 0"
                                                    Text="{Binding temp, StringFormat='{0:N0}°C'}"
                                                    HorizontalOptions="Center"
                                                    VerticalOptions="Center"
                                                    FontSize="{StaticResource Body2FontSize}">
                                                    <Label.Triggers>
                                                        <MultiTrigger TargetType="Label">
                                                            <MultiTrigger.Conditions>
                                                                <BindingCondition Binding="{Binding isActive}" Value="True"/>
                                                            </MultiTrigger.Conditions>
                                                            <Setter Property="FontFamily" Value="Rubik_Regular"/>
                                                            <Setter Property="TextColor" Value="{StaticResource TextColor}"/>
                                                        </MultiTrigger>
                                                        <MultiTrigger TargetType="Label">
                                                            <MultiTrigger.Conditions>
                                                                <BindingCondition Binding="{Binding isActive}" Value="False"/>
                                                            </MultiTrigger.Conditions>
                                                            <Setter Property="FontFamily" Value="Rubik_Light"/>
                                                            <Setter Property="TextColor" Value="{StaticResource GrayColor}"/>
                                                        </MultiTrigger>
                                                    </Label.Triggers>
                                                </Label>
                                            </Grid>
                                        </Frame>
                                    </StackLayout>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </StackLayout>
                    </StackLayout>
                </Grid>
            </ScrollView>
        </RefreshView>
    </ContentPage.Content>
</ContentPage>