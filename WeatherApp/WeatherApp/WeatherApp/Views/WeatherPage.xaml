<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.Views.WeatherPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <Grid
            RowDefinitions="Auto, Auto, Auto, *, Auto, Auto"
            RowSpacing="0"
            Padding="24, 8, 24, 8"
            BackgroundColor="{StaticResource WhiteColor}">
            <Label
                Grid.Row="0"
                Text="{Binding CurrentCity}"
                FontSize="{StaticResource Headline2FontSize}"
                FontFamily="FrankRuhle_Medium"
                TextColor="{StaticResource TextColor}"
                HorizontalOptions="Start"></Label>
            <Label
                Grid.Row="1"
                Text="{Binding CurrentCountry}"
                FontSize="{StaticResource Headline4FontSize}"
                FontFamily="Rubik_Light"
                TextColor="{StaticResource TextColor}"
                HorizontalOptions="Start"></Label>
            <Label
                Grid.Row="2"
                Text="{Binding CurrentDate}"
                FontSize="{StaticResource Body1FontSize}"
                FontFamily="Rubik_Light"
                TextColor="{StaticResource GrayColor}"
                HorizontalOptions="Start"
                Margin="0, 4, 0, 0"></Label>
            <StackLayout
                Grid.Row="3"
                VerticalOptions="CenterAndExpand">
                <Image 
                    Source="{Binding CurrentWeather.weather.icon, StringFormat='icon_{0}.png'}"></Image>
                <Label
                    Text="{Binding CurrentWeather.weather.description}"
                    FontSize="{StaticResource Body2FontSize}"
                    FontFamily="Rubik_Medium"
                    TextColor="{StaticResource TextColor}"
                    HorizontalOptions="Center"></Label>
            </StackLayout>
            <StackLayout
                Grid.Row="4"
                Orientation="Horizontal"
                HorizontalOptions="FillAndExpand">
                <StackLayout
                    VerticalOptions="Center">
                    <Label
                        HorizontalOptions="Start">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span
                                    Text="Wind speed: "
                                    FontFamily="Rubik_Light"
                                    FontSize="{StaticResource Body2FontSize}"
                                    TextColor="{StaticResource GrayColor}"></Span>
                                <Span
                                    Text="{Binding CurrentWeather.wind_speed, StringFormat='{0:N1} km/h'}"
                                    FontFamily="Rubik_Regular"
                                    FontSize="{StaticResource Body2FontSize}"
                                    TextColor="{StaticResource TextColor}"></Span>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Label
                        HorizontalOptions="Start">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span
                                    Text="Humidity: "
                                    FontFamily="Rubik_Light"
                                    FontSize="{StaticResource Body2FontSize}"
                                    TextColor="{StaticResource GrayColor}"></Span>
                                <Span
                                    Text="{Binding CurrentWeather.humidity, StringFormat='{0}%'}"
                                    FontFamily="Rubik_Regular"
                                    FontSize="{StaticResource Body2FontSize}"
                                    TextColor="{StaticResource TextColor}"></Span>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Label
                        HorizontalOptions="Start">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span
                                    Text="Rain probability: "
                                    FontFamily="Rubik_Light"
                                    FontSize="{StaticResource Body2FontSize}"
                                    TextColor="{StaticResource GrayColor}"></Span>
                                <Span
                                    Text="{Binding CurrentWeather.rain, StringFormat='{0}%'}"
                                    FontFamily="Rubik_Regular"
                                    FontSize="{StaticResource Body2FontSize}"
                                    TextColor="{StaticResource TextColor}"></Span>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </StackLayout>
                <Label
                    HorizontalOptions="EndAndExpand"
                    VerticalOptions="StartAndExpand">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span
                                Text="{Binding CurrentWeather.temp, StringFormat='{0:N0}°'}"
                                FontFamily="Rubik_Light"
                                FontSize="{StaticResource Headline0FontSize}"
                                TextColor="{StaticResource TextColor}"></Span>
                            <Span
                                Text="C"
                                FontFamily="Rubik_Medium"
                                FontSize="{StaticResource Subtitle1FontSize}"
                                TextColor="{StaticResource TextColor}"></Span>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </StackLayout>
            <StackLayout
                Grid.Row="5">
                <Label
                    Text="Today"
                    FontSize="{StaticResource Headline4FontSize}"
                    FontFamily="FrankRuhle_Medium"
                    TextColor="{StaticResource TextColor}"
                    HorizontalOptions="Start"
                    Margin="0, 8, 0, 8"></Label>
                <CollectionView
                    ItemsSource="{Binding TodayWeatherList}"
                    ItemSizingStrategy="MeasureFirstItem"
                    HeightRequest="100">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Margin="12, 16, 12, 16">
                                <Label 
                                    Text="{Binding Hour}"
                                    HorizontalOptions="Center"
                                    FontFamily="Rubik_Regular"></Label>
                                <Image 
                                    Source="{Binding Icon}"
                                    WidthRequest="30"
                                    HeightRequest="30"></Image>
                                <Label 
                                    Text="{Binding Temperature, StringFormat='{0}°C'}"
                                    HorizontalOptions="Center"
                                    FontFamily="Rubik_Regular"></Label>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>